<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.D2M" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="Theme.D2M" parent="Base.Theme.D2M">
        <item name="statusBarBackground">@color/green</item>
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="Theme.D2M.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="AddCarToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="HomeToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AddressTextInputLayoutTheme" parent="@style/Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="hintEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AddressTextInputEditTextTheme" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/gray</item>
    </style>

</resources>